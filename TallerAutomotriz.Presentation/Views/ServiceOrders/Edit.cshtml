@model TallerAutomotriz.Application.DTOs.UpdateServiceOrderDto
@using TallerAutomotriz.Domain.Entities

@{
    ViewData["Title"] = "Edit Service Order";
}

<h1>Edit Service Order</h1>

<h4>Service Order Information</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="id" value="@ViewContext.RouteData.Values["id"]" />
            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<ServiceOrderStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CompletionDate" class="control-label"></label>
                <input asp-for="CompletionDate" class="form-control" type="date" />
                <span asp-validation-for="CompletionDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="VehicleId" class="control-label">Vehicle</label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.Vehicles"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="MechanicId" class="control-label">Mechanic</label>
                <select asp-for="MechanicId" class="form-control" asp-items="ViewBag.Mechanics"></select>
                <span asp-validation-for="MechanicId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}